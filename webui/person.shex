PREFIX schema: <http://schema.org/>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
PREFIX rex: <http://underlay.org/ns/rex#>
PREFIX ex: <http://example.com/>

_:person bnode {
  a [ schema:Person ] ;
  schema:url iri ;
  schema:age xsd:integer // rex:sort rex:greatest ;
  schema:name xsd:string // rex:meta ex:Update // rex:with schema:date ;
  schema:children @_:person * ;
} // rex:key schema:url

ex:Update bnode {
  a [ ex:Update ] ;
  schema:date xsd:dateTime // rex:sort rex:latest ;
}