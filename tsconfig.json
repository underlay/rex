{
	"include": ["src/*", "types/*"],
	"compilerOptions": {
		"strict": true,
		"module": "ESNext",
		"target": "ES2020",
		"outDir": "lib",
		"sourceMap": true,
		"declaration": true,
		"alwaysStrict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	}
}
